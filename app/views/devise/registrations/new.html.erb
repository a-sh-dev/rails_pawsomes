<h1>Register</h1>
<h3 class="mb-5">...and become Pawsomes!</h3>

<section class="row justify-content-center card bg-light border-primary p-3 p-md-5">
  <div class="col">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      
      <p class="h5 pt-sm-3">Your Basic Information</p>
      <div class="form-group mb-3">
        <%= f.input :username, label: "Pick a username", placeholder: "username", hint: "3 to 12 characters with optional underscores only", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.input :email, label: "E-mail", required: true, placeholder: "myemail@email.com", input_html: { autocomplete: "email" }, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password"}, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.input :password_confirmation, input_html: { autocomplete: "new-password"}, class: "form-control" %>
      </div>

      <p class="h5">Do you currently own a pet?</p>
      <div class="form-group mb-3">
        <div class="form-check pl-0">
          <%= f.input :pet_owner, as: :boolean, checked_value: true, unchecked_value: false, label: "Yes", class: "form-check-input" %>
        </div>
      </div>
      
      <!-- Nested Location Attributes -->
      <p class="h5">Your Location</p>
      <%= f.simple_fields_for :location, Location.new do |loc| %>
        <div class="form-row">
          <div class="form-group col-md-4">
            <%= loc.input_field :country, label: false, placeholder: "Country", class: "form-control" %>
          </div>
          
          <div class="form-group col-md-4">
            <%= loc.input_field :state, label: false, placeholder: "State", class: "form-control" %>
          </div>
          
          <div class="form-group col-md-4">
            <%= loc.input_field :city, label: false, placeholder: "City", class: "form-control" %>
          </div>
        </div>
      <% end %>
      
      <div class="form-actions mb-3">
        <%= f.button :submit, "Register", class: "btn btn-primary" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</section>