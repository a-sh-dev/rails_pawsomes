<div class="container my-3 my-md-5">
  <h1 class="display-4">Registration</h1>
  <h3 class="subtitle mb-5">Join and become Pawsomes!</h3>
  
  <div class="row justify-content-center align-items-center">
    <section class="col-11 col-md-8 card bg-light border-primary p-3 p-md-5">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        
        <p class="h5 pt-sm-3">Your Basic Information</p>
        <div class="form-group mb-3">
          <%= f.input :username, label: "Pick a username", placeholder: "username", hint: "3 to 20 characters with optional underscores only", class: "form-control" %>
        </div>
  
        <div class="form-group mb-3">
          <%= f.input :email, label: "E-mail", required: true, placeholder: "myemail@email.com", input_html: { autocomplete: "email" }, class: "form-control" %>
        </div>
  
        <div class="form-group mb-3">
          <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password"}, class: "form-control" %>
        </div>
  
        <div class="form-group mb-3">
          <%= f.input :password_confirmation, input_html: { autocomplete: "new-password"}, class: "form-control" %>
        </div>
  
        <p class="h5">Do you currently own a pet?</p>
        <div class="form-group mb-3">
          <div class="form-check pl-0">
            <%= f.input :pet_owner, as: :boolean, checked_value: true, unchecked_value: false, label: "Yes", class: "form-check-input" %>
          </div>
        </div>
        
        <!-- Nested Location Attributes -->
        <p class="h5">Your Location</p>
        <%= f.simple_fields_for :location, Location.new do |loc| %>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= loc.input_field :country, required: true, label: false, placeholder: "Country", hint: "no spaces and alphabets only are allowed", class: "form-control" %>
            </div>
            
            <div class="form-group col-md-6">
              <%= loc.input_field :city, required: true, label: false, placeholder: "City", hint: "no spaces and alphabets only are allowed", class: "form-control" %>
            </div>
          </div>
        <% end %>
        
        <div class="form-actions mb-3">
          <%= f.button :submit, "Register", class: "btn btn-primary" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </section>
  </div>
</div>