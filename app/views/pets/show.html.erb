<section class="container my-5">
  <header class="mb-5">
    <h1 class="display-4"><%= @pet.name.titlecase %></h1>
    <h2 class="subtitle"><%= @pet.display_category_breed %></h2>
  </header>
  <main>
    <div class="row">
      <picture class="w-50 ml-0">
        <%= image_tag profile_photo_select(@pet), class: "img-thumbnail rounded profile-photo" %>
      </picture>
    </div>
    
    <p class="lead">
      Lorem ipsum dolor sit amet consectetur adipisicing elit.
      
    </p>
    <p>
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Dignissimos fugiat 
    </p>
    
    <% if user_is_pet_owner(@pet) %>
      <%= link_to "Edit", edit_pet_path(@pet.name), class: "btn btn-primary my-3 mb-5" %>
      <%= link_to "Remove", pet_path, method: :delete, class: "btn btn-outline-info my-3 mb-5" %>
    <% else %>
      <% if current_user_is_supporting(current_user.id, @pet.id) %>
        <%= link_to "Supporting", unsupport_pet_path, remote: true, class: "btn btn-outline-primary unsupport-btn", id: "unsupport-btn", method: :post %>
      <% else %>
        <%= link_to "Support", support_pet_path, remote: true, class: "btn btn-primary support-btn", id: "unsupport-btn", method: :post %>
      <% end %>
      <!-->
      <%= link_to "Supporting #{(@pet.name).titlecase}", pets_path, class: "btn btn-primary my-3 mb-5" %>
      <-->
    <% end %>

    <%= link_to "Back to Paw Pets", pets_path, class: "btn btn-outline-primary my-3 mb-5" %>
  </main>
</section>


