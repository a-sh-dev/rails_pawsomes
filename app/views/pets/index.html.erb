<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Breed</th>
      <th>Name</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Bio</th>
      <th>Instagram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.owner_id %></td>
        <td><%= pet.breed_id %></td>
        <td><%= pet.name %></td>
        <td><%= pet.dob %></td>
        <td><%= pet.gender %></td>
        <td><%= pet.bio %></td>
        <td><%= pet.instagram %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

